{
  "api": {
    "host" : "default"
  },
  "resources": {
    "host_thumbnails" : "http://default/V3C1/V3C1jpg/:o/:s.jpg",
    "host_objects": "http://default/V3C1/video/:o.mp4"
  },
  "competition": {
    "teamid": 2,
    "toolid": 1,
    "sessionid": "yoursessionid",
    "endpoint": "https://interactivevideoretrieval.com/",
    "log": true,
    "lsc": false,
    "vbs": false,
    "dres": true
  },
  "mlt": {
    "VIDEO": ["scenecaption", "localfeatures", "objectInstances"],
    "IMAGE": ["scenecaption", "localfeatures", "objectInstances"]
  },
  "query": {
    "history": 5,
    "options": {
      "image": true,
      "audio": false,
      "model3d": false,
      "motion": false,
      "text": true,
      "tag": true,
      "semantic": true,
      "boolean": false,
      "pose": true,
      "boolean": true
    },
    "text": {
      "categories": [
        ["ocr", "Text on Screen"],
        ["asr", "Audio"],
        ["scenecaption", "Description"]
      ]
    },
    "boolean": [
      ["Example Freetext", "TEXT", "features_daily.text"],
      ["Example Dropdown", "OPTIONS", "features.option", "ONE", "TWO", "THREE"],
      ["Example Range", "RANGE", "features.range", 5, 20]
    ],
    "staged": true
  },
  "refinement": {
    "filters": [
      ["dominantcolor.color", "CHECKBOX"],
      ["technical.duration", "SLIDER"],
      ["LSCMETA.semantic_name", "CHECKBOX"]
    ]
  }
}
