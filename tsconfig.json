{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "noStrictGenericChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "three",
      "jszip"
    ],
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "importHelpers": true
  }
}
